        input[type='text' ng-model='ctrl_user.gs_3s' ng-change='calculatePoints()' style='width:40px']
      td
        input[type='text' ng-model='ctrl_user.gs_4s' ng-change='calculatePoints()' style='width:40px']
      td
        input[type='text' ng-model='ctrl_user.efs' ng-change='calculatePoints()' style='width:40px']
      td
        input[type='text' ng-model='ctrl_user.qfs' ng-change='calculatePoints()' style='width:40px']
      td
        input[type='text' ng-model='ctrl_user.sfs' ng-change='calculatePoints()' style='width:40px']
      td
        input[type='text' ng-model='ctrl_user.fs' ng-change='calculatePoints()' style='width:40px']
      td
        input[type='text' ng-model='ctrl_user.cs' ng-change='calculatePoints()' style='width:40px']
      td
        input[type='text' ng-model='ctrl_user.tss' ng-change='calculatePoints()' style='width:40px']
      td
        | {{ctrl_user.points}}
      td
        button.btn[ng-click='add_ctrl_user()'] Add


